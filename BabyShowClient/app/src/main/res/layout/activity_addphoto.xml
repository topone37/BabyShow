<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="com.tp.bsclient.activity.AddPhotoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/bg_title_bar"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_back_photo"
            android:layout_width="@dimen/iv_back_width"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/sel_btn_back_style"
            android:clickable="true"
            android:padding="@dimen/iv_back_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/back" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/back_line_size"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ll_back_album"
            android:background="@color/back_line" />

        <View
            android:layout_width="@dimen/back_line_size"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ll_back_album"
            android:background="@color/back_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加"
            android:textColor="@color/title_textcolor"
            android:textSize="@dimen/title_textsize" />

        <View
            android:layout_width="@dimen/back_line_size"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_add"
            android:background="@color/back_line" />

        <TextView
            android:id="@+id/tv_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sel_btn_back_style"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/iv_back_padding"
            android:text="发布"
            android:textColor="@color/title_textcolor"
            android:textSize="@dimen/text_big" />

    </RelativeLayout>

    <EditText
        android:id="@+id/edit_extra"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@null"
        android:gravity="top"
        android:hint="记下这一刻...."
        android:maxLines="4"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/addpic" />

</LinearLayout>
