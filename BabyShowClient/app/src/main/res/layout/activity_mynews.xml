<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/bg_title_bar">

        <LinearLayout
            android:id="@+id/ll_back_mynews"
            android:layout_width="@dimen/iv_back_width"
            android:layout_height="@dimen/edit_height"
            android:layout_centerVertical="true"
            android:background="@drawable/sel_btn_back_style"
            android:clickable="true"
            android:padding="@dimen/iv_back_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/back_line_size"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ll_back_mynews"
            android:background="@color/back_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的动态"
            android:textColor="@color/title_textcolor"
            android:textSize="@dimen/title_textsize" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/line" />

    <ListView
        android:id="@+id/lv_mynews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"></ListView>

</LinearLayout>