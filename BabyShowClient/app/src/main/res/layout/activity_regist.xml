<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_style"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/bg_title_bar">
        <!--返回按钮-->
        <LinearLayout
            android:id="@+id/ll_back_regist"
            android:layout_width="@dimen/iv_back_width"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/sel_btn_back_style"
            android:orientation="horizontal"
            android:padding="@dimen/iv_back_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/back" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/back_line_size"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ll_back_feedback"
            android:background="@color/back_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="欢迎注册"
            android:textColor="@color/title_textcolor"
            android:textSize="@dimen/title_textsize" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="50dp">


        <EditText
            android:id="@+id/edit_uname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/et_register_shape"
            android:hint="请输入用户名..."
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edit_upass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/et_register_shape"
            android:hint="请输入密码..."
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edit_reupass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/et_register_shape"
            android:hint="请输入密码..."
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_register_style"
            android:onClick="regist"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:text="注册"
            android:textColor="#FFF"
            android:textSize="17sp" />

    </LinearLayout>
</LinearLayout>